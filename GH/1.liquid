<div class="product">
  <h1>{{ product.title }}</h1>
  <p>Цена: {{ product.price | money }}</p>
  {% if product.available %}
    <form action="/cart/add" method="post">
      <input type="hidden" name="id" value="{{ product.id }}">
      <input type="submit" value="Добавить в корзину">
    </form>
  {% else %}
    <p>Товар временно недоступен</p>
  {% endif %}
</div>
